2.a
boolean happy = false;

 void setup() {
   if (iAmHappy())
   {
     println("I clap my hands");
   }
   else
   {
     println("I don't clap my hands"); 
   }
}

boolean iAmHappy(){ // Tilføjede en "if else" for at give iAmHappy boolean en true eller false fordi det er det den forventer.
  if (happy == true){
  return true;
  }else {
  return false;
  }
}

2.b
int a = -20;
int b = 7;

void setup (){
  sum();
}


public int sum (){
  int s = a+b;
  println(s);
  return s;
}
printede ud "-13"

2.c
String toUppercase(String tekst) {
  return tekst.toUpperCase();
}

// Eksempel på brug
void setup() {
  String originalen = "peter";
  String resultatet = toUppercase(originalen);
  println(resultatet);
}

2.d og 2.e
boolean startUpperCase (String tekst){
  if (tekst.length() == 0){
    return false;
  }
  
  char firstLetter = tekst.charAt(0);
  return Character.isUpperCase(firstLetter);
}

void setup (){
  println(startUpperCase("peter")); // false
  println(startUpperCase("Peter")); // true
  println(startUpperCase("pEter")); // false
  println(startUpperCase("12345")); // false
  println(startUpperCase(" ")); // false
}
